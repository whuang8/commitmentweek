<div class="container">
	<div class="row title">
		<div class="col-lg-12 text-center">
			<h4>Purdue Hackers presents</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center">
			<h1>[Commit]ment Week</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center">
			<p>
				<%= link_to " ", day_path(1), class: 'btn days' %>
				<%= link_to "Mon", day_path(2), class: 'btn days' %>
				<%= link_to " ", day_path(3), class: 'btn days' %>
				<%= link_to "Wed", day_path(4), class: 'btn days' %>
				<%= link_to " ", day_path(5), class: 'btn days' %>
				<%= link_to "Fri", day_path(6), class: 'btn days' %>
				<%= link_to " ", day_path(7), class: 'btn days' %>
			</p>
		</div>
	</div>
	<div class="row commit-squares">
		<div class="col-lg-12 text-center">
			<p>
				<%= link_to " ", day_path(1), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g2' %>
				<%= link_to " ", day_path(2), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g1' %>
				<%= link_to " ", day_path(3), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g2' %>
				<%= link_to " ", day_path(4), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g3' %>
				<%= link_to " ", day_path(5), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g4' %>
				<%= link_to " ", day_path(6), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g1' %>
				<%= link_to " ", day_path(7), class: 'btn btn-sq-sm btn-default hvr-glow', id: 'g3' %>
			</p>
		</div>
	</div>
	<% if !current_user %>
		<div class="row">
			<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-offset-4 col-sm-4 col-xs-offset-2 col-xs-8">
				<%= link_to "/auth/github", class: 'btn btn-block btn-social btn-github' do %>
	    			<span class="fa fa-github"></span> Sign in with Github
				<% end %>	
			</div>
		</div>
	<% end %>
</div>